<Page
    x:Class="ShareTarget.Pages.SharePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShareTarget"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="12">
        <TextBlock Text="Share target" Style="{StaticResource SubheaderTextBlockStyle}" />

        <TextBlock Text="This is the content you're going to share" />

        <TextBlock x:Name="txtTitle" />
        <TextBlock x:Name="txtSharedText" />

        <Button Content="Complete" Click="OnComplete"/>
    </StackPanel>

</Page>
