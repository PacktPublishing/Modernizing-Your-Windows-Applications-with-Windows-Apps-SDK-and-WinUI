<Window x:Class="ShareSource.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShareSource.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Margin="12">
        <TextBlock Text="Share source" FontSize="24" />

        <TextBlock Text="Text to share" />
        <TextBox x:Name="txtToShare" />
        <Button Content="Share" Click="OnShare" />
    </StackPanel>
    
</Window>
