<Window x:Class="ShareTarget.Wpf.ShareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShareTarget.Wpf"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="ShareWindow" Height="450" Width="800">
    <StackPanel Margin="12">
        <TextBlock Text="Share target" FontSize="24" />

        <TextBlock Text="This is the content you're going to share" />

        <TextBlock x:Name="txtTitle" />
        <TextBlock x:Name="txtSharedText" />

        <Button Content="Complete" Click="OnComplete"/>
    </StackPanel>
</Window>
